<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/custom_settings_title">

     <PreferenceCategory
        android:title="@string/status_bar_battery_title">

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/status_bar_battery_percent_title"
            android:summary="@string/status_bar_battery_percent_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/navigation_bar_title">

        <PreferenceScreen
            android:key="systemui_tuner_navbar"
            android:title="@string/systemui_tuner_navbar_title"
            android:summary="@string/systemui_tuner_navbar_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.NavBarTunerActivity" />
        </PreferenceScreen>

   	<com.android.settings.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_navbar"
            android:title="@string/double_tap_sleep_nav_bar_title"
            android:summary="@string/double_tap_sleep_nav_bar_summary"
            android:defaultValue="false" />

        <com.android.settings.preference.SecureSettingSwitchPreference
            android:key="overview_nav_bar_gesture"
            android:title="@string/overview_nav_bar_gesture"
            android:summary="@string/overview_nav_bar_gesture_desc" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/status_bar_title">

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="status_bar_quick_qs_pulldown"
            android:title="@string/status_bar_quick_qs_pulldown_title"
            android:summary="@string/status_bar_quick_qs_pulldown_summary"
            android:defaultValue="true" />

   	<com.android.settings.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:summary="@string/double_tap_to_sleep_summary"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="systemui_tuner_statusbar"
            android:title="@string/systemui_tuner_statusbar_title"
            android:summary="@string/systemui_tuner_statusbar_summary" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity" />
        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/quick_settings_title">

        <com.android.settings.preference.SecureSettingSwitchPreference
            android:key="qs_data_advanced"
            android:title="@string/qs_advanced_data_title"
            android:summary="@string/qs_advanced_data_summary"
            android:defaultValue="false" />

        <com.android.settings.preference.SecureSettingSwitchPreference
            android:key="qs_show_brightness"
            android:title="@string/qs_brightness_slider_title"
            android:summary="@string/qs_brightness_slider_summary"
            android:defaultValue="true"/>

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="qs_show_brightness_icon"
            android:title="@string/brightness_icon_title"
            android:summary="@string/brightness_icon_summary"
            android:dependency="qs_show_brightness"
            android:defaultValue="false"/>

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="qs_fancy_animation"
            android:title="@string/qs_animation_title"
            android:summary="@string/qs_animation_summary"
            android:defaultValue="true" />

        <PreferenceScreen
            android:key="status_bar_expanded_qs_settings"
            android:title="@string/status_bar_expanded_qs_settings"
            android:summary="@string/status_bar_expanded_qs_settings_summary"
            android:fragment="com.pure.settings.fragments.StatusbarExpandedQSSettings" />

    </PreferenceCategory>

</PreferenceScreen>
